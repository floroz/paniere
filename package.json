{
  "name": "@floroz/paniere-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run --recursive --parallel dev",
    "dev:frontend": "pnpm run --filter @paniere/frontend dev",
    "dev:backend": "pnpm run --filter @paniere/backend dev",
    "build": "pnpm run --filter @paniere/shared build && pnpm run --filter @paniere/frontend build",
    "lint": "pnpm run --recursive lint",
    "type-check": "pnpm run --recursive type-check",
    "test": "pnpm run --recursive test",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "prepare": "husky && husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.12.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1"
  },
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,md,json,yaml,yml}": [
      "prettier --write"
    ]
  }
}
